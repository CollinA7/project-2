<div class="l-content">
    <div class="pricing-tables pure-g">
        <div class="pure-u-1 pure-u-md-1-3">
            <div class="pricing-table pricing-table-free">
                <div class="pricing-table-header">
                    <h2>Take Orders</h2>
                    </div>
            <form class="pure-form pure-form-stacked">
        <fieldset>
        <label for="name">Name</label>
        <input type="name" id="order-name" value={{customer_name}}/>
        <label for="stacked-phone">Phone Number</label>
        <input type="text" id="stacked-phone" value={{customer_phone}} />
        <label for="stacked-order">Order Number</label>
        <input type="text" id="stacked-order" value={{order_id}}>
           
        <button type="submit" class="pure-button pure-button-primary">Submit Order</button>
    </fieldset>
</form>

        <div class="pure-u-1 pure-u-md-1-3">
            <div class="pricing-table pricing-table-enterprise">
                <div class="pricing-table-header">
                    <h2>Review Orders</h2>

                
                </div>

                <style>
    /* Customization to limit height of the menu */
    .custom-restricted {
        height: 160px;
        width: 150px;
        border: 1px solid gray;
        border-radius: 4px;
    }
      </style>

<div class="pure-menu pure-menu-scrollable custom-restricted">
        {{> order_items}}
            </div>    

                <button class="button-choose pure-button">Choose</button>
            </div>
        </div>
    </div> <!-- end of tables -->


<script src='/javascript/customer.js'></script>